{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es5",
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "jsx": "react"
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "dist",
    "src/setupTests.ts",
    "tslint:latest",
    "tslint-config-prettier",
    "example/**"
  ],
  "include": ["src/*.json", "src/*.ts"]
}
